################################################################################
# Docker Environment Variables
#
# Copy this file to .env.docker and configure for your environment.
# These values are used by docker-compose.yml
#
# SECURITY: Never commit .env.docker to version control!
################################################################################

#-------------------------------------------------------------------------------
# MySQL Configuration
#-------------------------------------------------------------------------------

# Database name
MYSQL_DATABASE=vodo

# MySQL root password (REQUIRED - generate a strong password)
# Example: openssl rand -base64 32
MYSQL_ROOT_PASSWORD=

# Application database user (non-root for security)
MYSQL_USER=vodo

# Application database password (REQUIRED - generate a strong password)
# Example: openssl rand -base64 32
MYSQL_PASSWORD=

#-------------------------------------------------------------------------------
# Port Configuration
#-------------------------------------------------------------------------------

# Web server port (default: 80)
NGINX_PORT=80

# MySQL port (default: 3306)
MYSQL_PORT=3306

# phpMyAdmin port (default: 8080, only for development)
PHPMYADMIN_PORT=8080

#-------------------------------------------------------------------------------
# Development Tools (DO NOT enable in production)
#-------------------------------------------------------------------------------

# To enable phpMyAdmin, run:
# docker compose --profile dev-tools up -d
