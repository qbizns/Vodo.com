################################################################################
# Vodo.com Environment Configuration
#
# Copy this file to .env and configure for your environment.
# NEVER commit .env to version control!
################################################################################

APP_NAME=Vodo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Timezone and Locale
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

#-------------------------------------------------------------------------------
# Security Settings
#-------------------------------------------------------------------------------

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Force HTTPS (set to true in production)
FORCE_HTTPS=false

# Login throttling
AUTH_THROTTLE_MAX_ATTEMPTS=5
AUTH_THROTTLE_DECAY_MINUTES=15

#-------------------------------------------------------------------------------
# Logging
#-------------------------------------------------------------------------------

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# For production, use: warning or error
LOG_LEVEL=debug

#-------------------------------------------------------------------------------
# Database
#-------------------------------------------------------------------------------

# For local development (SQLite)
DB_CONNECTION=sqlite

# For Docker/Production (MySQL)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=vodo
# DB_USERNAME=vodo
# DB_PASSWORD=

#-------------------------------------------------------------------------------
# Session Configuration
#-------------------------------------------------------------------------------

SESSION_DRIVER=database
SESSION_LIFETIME=120

# SECURITY: Session encryption is ENABLED by default for security
# Only set to false for debugging in local development
SESSION_ENCRYPT=true

SESSION_PATH=/
SESSION_DOMAIN=null

# SECURITY: Set to true when using HTTPS
SESSION_SECURE_COOKIE=false

# Recommended: Keep as true to prevent XSS access to cookies
SESSION_HTTP_ONLY=true

# Options: lax, strict, none
SESSION_SAME_SITE=lax

#-------------------------------------------------------------------------------
# Cache, Queue, and Broadcasting
#-------------------------------------------------------------------------------

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# For production, consider using Redis:
# CACHE_STORE=redis
CACHE_STORE=database
# CACHE_PREFIX=

#-------------------------------------------------------------------------------
# Redis (Optional - Recommended for Production)
#-------------------------------------------------------------------------------

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#-------------------------------------------------------------------------------
# Memcached (Optional)
#-------------------------------------------------------------------------------

MEMCACHED_HOST=127.0.0.1

#-------------------------------------------------------------------------------
# Mail Configuration
#-------------------------------------------------------------------------------

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#-------------------------------------------------------------------------------
# AWS Configuration (Optional)
#-------------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#-------------------------------------------------------------------------------
# Frontend Build
#-------------------------------------------------------------------------------

VITE_APP_NAME="${APP_NAME}"

################################################################################
# PRODUCTION CHECKLIST
#
# Before deploying to production, ensure:
# 1. APP_ENV=production
# 2. APP_DEBUG=false
# 3. APP_KEY is generated (php artisan key:generate)
# 4. SESSION_ENCRYPT=true
# 5. SESSION_SECURE_COOKIE=true (if using HTTPS)
# 6. FORCE_HTTPS=true
# 7. LOG_LEVEL=warning or error
# 8. Database credentials are secure
# 9. All sensitive values are set via environment variables
################################################################################
# Disable all plugins (recovery mode)
PLUGINS_SAFE_MODE=false

# Enable/disable provider caching
PLUGINS_USE_CACHE=true
