################################################################################
# Vodo.com Production Environment Configuration
#
# SECURITY: This file contains sensitive configuration for production.
# - Generate strong random values for all secrets
# - Never commit actual values to version control
# - Use environment-specific secrets management
################################################################################

#-------------------------------------------------------------------------------
# Application Settings
#-------------------------------------------------------------------------------

APP_NAME=Vodo
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Force HTTPS for all requests
FORCE_HTTPS=true

#-------------------------------------------------------------------------------
# Logging (Production)
#-------------------------------------------------------------------------------

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Optional: External logging service
# PAPERTRAIL_URL=
# PAPERTRAIL_PORT=

# Optional: Error tracking
# SENTRY_LARAVEL_DSN=

#-------------------------------------------------------------------------------
# Database (Production)
#-------------------------------------------------------------------------------

DB_CONNECTION=mysql
DB_HOST=your-db-host.example.com
DB_PORT=3306
DB_DATABASE=vodo_production
DB_USERNAME=  # Use non-root user
DB_PASSWORD=  # Strong password

# Connection pooling
DB_POOL_MIN=2
DB_POOL_MAX=20

#-------------------------------------------------------------------------------
# Session (Production - SECURITY CRITICAL)
#-------------------------------------------------------------------------------

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com

# HTTPS-only cookies
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

#-------------------------------------------------------------------------------
# Cache (Production)
#-------------------------------------------------------------------------------

CACHE_DRIVER=redis
CACHE_PREFIX=vodo_prod_

#-------------------------------------------------------------------------------
# Queue (Production)
#-------------------------------------------------------------------------------

QUEUE_CONNECTION=redis

# Queue worker settings
QUEUE_RETRY_AFTER=90
QUEUE_BLOCK_FOR=5

#-------------------------------------------------------------------------------
# Redis (Production)
#-------------------------------------------------------------------------------

REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host.example.com
REDIS_PASSWORD=  # Strong password if required
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Redis cluster (if using)
# REDIS_CLUSTER=redis

#-------------------------------------------------------------------------------
# Mail (Production)
#-------------------------------------------------------------------------------

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

#-------------------------------------------------------------------------------
# Storage (Production)
#-------------------------------------------------------------------------------

FILESYSTEM_DISK=s3

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-bucket-name
AWS_URL=https://your-cdn.cloudfront.net
AWS_USE_PATH_STYLE_ENDPOINT=false

#-------------------------------------------------------------------------------
# Security Settings
#-------------------------------------------------------------------------------

# Password hashing (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Login throttling
AUTH_THROTTLE_MAX_ATTEMPTS=5
AUTH_THROTTLE_DECAY_MINUTES=15

# API rate limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_AUTHENTICATED=120

#-------------------------------------------------------------------------------
# Backup Settings
#-------------------------------------------------------------------------------

BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DISK=s3

#-------------------------------------------------------------------------------
# Monitoring
#-------------------------------------------------------------------------------

# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_SECRET=  # Secret token for protected metrics

# Optional: APM
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=Vodo Production

#-------------------------------------------------------------------------------
# Feature Flags
#-------------------------------------------------------------------------------

PLUGINS_SAFE_MODE=false
PLUGINS_USE_CACHE=true

#-------------------------------------------------------------------------------
# CORS (if needed)
#-------------------------------------------------------------------------------

CORS_ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

################################################################################
# Production Deployment Checklist
#
# Before deploying, verify:
# [ ] APP_KEY is set (unique per environment)
# [ ] APP_DEBUG is false
# [ ] All database credentials are correct
# [ ] Redis connection is configured
# [ ] SESSION_ENCRYPT is true
# [ ] SESSION_SECURE_COOKIE is true
# [ ] FORCE_HTTPS is true
# [ ] LOG_LEVEL is warning or higher
# [ ] Backup settings are configured
# [ ] SSL certificate is installed
# [ ] DNS is configured correctly
################################################################################
